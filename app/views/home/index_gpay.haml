/ Google Pay Inspired Header
.gpay-header
  .gpay-header-bg
    .gpay-header-content
      .gpay-brand
        .gpay-logo
          %i.fas.fa-coins
        %h1.gpay-title SalaryPlus
        %p.gpay-subtitle 智能薪資計算系統
      .gpay-header-visual
        .gpay-floating-elements
          .gpay-circle.circle-1
          .gpay-circle.circle-2
          .gpay-circle.circle-3
        .gpay-phone-mockup
          .phone-screen
            .screen-content
              .mini-card
                %i.fas.fa-users
                %span 員工管理
              .mini-card
                %i.fas.fa-calculator
                %span 薪資計算
              .mini-card
                %i.fas.fa-chart-line
                %span 報表分析

/ Main Dashboard Content
.gpay-dashboard
  .gpay-container
    / Quick Stats Section
    .gpay-stats-section
      %h2.section-title 系統概覽
      .gpay-stats-grid
        .gpay-stat-card.stat-employees
          .stat-icon
            %i.fas.fa-users
          .stat-content
            .stat-number= @total_employees || "0"
            .stat-label 總員工數
            .stat-change +#{@active_employees || "0"}
        
        .gpay-stat-card.stat-payrolls
          .stat-icon
            %i.fas.fa-file-invoice-dollar
          .stat-content
            .stat-number= @current_month_payrolls || "0"
            .stat-label 本月薪資
            .stat-change +10
        
        .gpay-stat-card.stat-active
          .stat-icon
            %i.fas.fa-user-check
          .stat-content
            .stat-number= @active_employees || "0"
            .stat-label 在職員工
            .stat-change +23

    / Quick Actions Section
    .gpay-actions-section
      .section-header
        %h2.section-title 快速操作
        .section-subtitle 常用功能快速訊問
      
      .gpay-actions-grid
        = link_to employees_path, class: "gpay-action-card action-employees" do
          .action-icon
            %i.fas.fa-users
          .action-content
            %h3 員工管理
            %p 管理員工資料和基本信息
          .action-arrow
            %i.fas.fa-arrow-right
        
        = link_to payrolls_path, class: "gpay-action-card action-payrolls" do
          .action-icon
            %i.fas.fa-calculator
          .action-content
            %h3 薪資計算
            %p 計算和生成員工薪資單
          .action-arrow
            %i.fas.fa-arrow-right
        
        = link_to attendances_path, class: "gpay-action-card action-attendance" do
          .action-icon
            %i.fas.fa-clock
          .action-content
            %h3 出勤管理
            %p 員工打卡和考勤記錄
          .action-arrow
            %i.fas.fa-arrow-right
        
        = link_to reports_path, class: "gpay-action-card action-reports" do
          .action-icon
            %i.fas.fa-chart-line
          .action-content
            %h3 報表分析
            %p 薪資統計和數據分析
          .action-arrow
            %i.fas.fa-arrow-right

    / Recent Activity Section
    .gpay-activity-section
      .section-header
        %h2.section-title 最近活動
        = link_to statements_path, class: "view-all-link" do
          查看全部
          %i.fas.fa-arrow-right
      
      .gpay-activity-list
        .activity-item
          .activity-icon.icon-success
            %i.fas.fa-check-circle
          .activity-content
            %h4 薪資計算完成
            %p 2025年6月份薪資計算已完成
            %span.activity-time 2小時前
        
        .activity-item
          .activity-icon.icon-info
            %i.fas.fa-user-plus
          .activity-content
            %h4 新增員工
            %p 新員工資料已建立
            %span.activity-time 5小時前
        
        .activity-item
          .activity-icon.icon-warning
            %i.fas.fa-exclamation-triangle
          .activity-content
            %h4 系統提醒
            %p 請檢查本月出勤記錄
            %span.activity-time 1天前

    / System Status Section
    .gpay-status-section
      .status-card
        .status-header
          %h3 系統狀態
          .status-indicator.status-online
        .status-content
          .status-item
            .status-dot.dot-green
            %span 薪資計算服務
            .status-badge.badge-online 正常
          .status-item
            .status-dot.dot-green
            %span 資料庫連接
            .status-badge.badge-online 正常
          .status-item
            .status-dot.dot-green
            %span 備份系統
            .status-badge.badge-online 正常

/ Navigation Bar (Floating)
.gpay-navbar
  .navbar-content
    .navbar-brand
      %i.fas.fa-coins
      %span SalaryPlus
    .navbar-nav
      = link_to employees_path, class: "nav-item" do
        %i.fas.fa-users
        %span 員工
      = link_to payrolls_path, class: "nav-item" do
        %i.fas.fa-calculator
        %span 薪資
      = link_to attendances_path, class: "nav-item" do
        %i.fas.fa-clock
        %span 出勤
      = link_to reports_path, class: "nav-item" do
        %i.fas.fa-chart-line
        %span 報表
      = link_to system_settings_path, class: "nav-item" do
        %i.fas.fa-cogs
        %span 設定
    .navbar-actions
      .user-profile
        %i.fas.fa-user-circle
        %span 管理員

